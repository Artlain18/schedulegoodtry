<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://creditEdit.caption"
        focusComponent="form"
        messagesPack="com.company.schedulegoodtry.web.screens.credit">
    <data>
        <instance id="creditDc"
                  class="com.company.schedulegoodtry.entity.Credit">
            <view extends="_local">
                <property name="bank" view="_minimal"/>
            </view>
            <loader/>
        </instance>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="editActions" spacing="true">
        <form id="form" dataContainer="creditDc">
            <column width="350px">
                <textField id="nameCreditField" property="nameCredit"/>
                <textField id="limitCreditField" property="limitCredit"/>
                <textField id="percentCreditField" property="percentCredit"/>
                <pickerField id="bankField" property="bank">
                    <actions>
                        <action id="lookup" type="picker_lookup"/>
                        <action id="clear" type="picker_clear"/>
                    </actions>
                </pickerField>
            </column>
        </form>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="closeBtn" action="windowClose"/>
        </hbox>
    </layout>
</window>

<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://paymentEdit.caption"
        focusComponent="form"
        messagesPack="com.company.schedulegoodtry.web.screens.payment">
    <data>
        <instance id="paymentDc"
                  class="com.company.schedulegoodtry.entity.Payment">
            <view extends="_local"/>
            <loader/>
        </instance>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="editActions" spacing="true">
        <form id="form" dataContainer="paymentDc">
            <column width="350px">
                <dateField id="datePaymentField" property="datePayment"/>
                <textField id="sumPaymentField" property="sumPayment"/>
                <textField id="sumCreditPaymentField" property="sumCreditPayment"/>
                <textField id="sumPercentPaymentField" property="sumPercentPayment"/>
            </column>
        </form>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="closeBtn" action="windowClose"/>
        </hbox>
    </layout>
</window>
